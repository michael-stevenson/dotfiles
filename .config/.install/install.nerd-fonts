#!/usr/bin/env bash

set -e

hash curl || news "Cannot install nerd-fonts, require curl"
hash fc-cache || news "Cannot install nerd-fonts, require fc-cache from fontconfig"

mkdir -p $HOME/opt/share/fonts
cd $HOME/opt/share/fonts

uri='https://github.com/ryanoasis/nerd-fonts/releases/download/v2.0.0'

declare -a fonts
fonts+=(Regular)

for font in ${fonts[@]}
do
	echo "Getting ${font}"
	curl -sSLkO "${uri}/${font}.zip"
	unzip -o ${font}.zip
	unlink ${font}.zip
done

fc-cache -f -v
