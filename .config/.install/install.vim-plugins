#!/usr/bin/env bash

BASE=${CFGDIR}/vim/bundle

declare -a plugins=(
 	https://github.com/vim-scripts/bufexplorer.zip
	http://github.com/tpope/vim-pathogen
	http://github.com/vim-scripts/showmarks2.git
	http://github.com/vim-scripts/vim-signature.git
	http://github.com/vim-scripts/stlrefvim.git
	http://github.com/majutsushi/tagbar.git
	http://github.com/vim-scripts/taglist.vim.git
	http://github.com/vim-scripts/vim-signify.git
)

for uri in ${plugins[@]}; do
	echo "Installing VIM plugin: $(basename $uri)"
	DIR="${BASE}/$(basename $uri)"
	if [[ ! -d ${DIR} ]]; then
		git clone -q $uri $DIR
	fi
done

ln -sf ${BASE}/vim-pathogen/autoload/pathogen.vim ${CFGDIR}/vim/autoload/pathogen.vim
