#!/usr/bin/env bash

set -e
hash wget || (echo "Failed: installing C++ standards drafts; wget required" && exit)

declare -a uris=(
	"www.open-std.org/jtc1/sc22/wg21/docs/papers/2017/n4659.pdf"
	"www.open-std.org/jtc1/sc22/wg21/docs/papers/2014/n4296.pdf"
	"www.open-std.org/jtc1/sc22/wg21/docs/papers/2012/n3337.pdf"
)

dest=$HOME/docs/cpp
mkdir -p $dest

for uri in ${uris[@]}; do
	name=$(basename $uri)
	wget --quiet $uri -O $dest/$name
done
