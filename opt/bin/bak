if [[ -d $1 ]]; then
	new_name=$1.bak.`date +%Y%m%dT%H%M%S`
	tar -c -z -f ${new_name}.tar.gz $1
	mkdir -p ${BAK_DIR:-~/bak}
	mv ${new_name}.tar.gz ${BAK_DIR:~~/bak}
elif [[ -e $1 ]]; then
	new_name=$1.bak.`date +%Y%m%dT%H%M%S`
	cp $1 $new_name
	gzip $new_name
	mkdir -p ${BAK_DIR:-~/bak}
	mv ${new_name} ${BAK_DIR:~~/bak}
else
	echo "doesn't exist"
fi
