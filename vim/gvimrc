" make it a little transparent
" set transparency=10
" set transparency=0

" Turn off the annoying tool bar
set guioptions=eg

" Set my prefered font
set guifont=Courier\ 10\ Pitch\ 9

" turn off beeping
set vb t_vb=

" If a directory contains a 'local' rc file, 
" source it .. 
if filereadable(fnamemodify("~/.local.gvimrc", ":p"))
	so ~/.local.gvimrc
endif
